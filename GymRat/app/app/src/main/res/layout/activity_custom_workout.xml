<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3961a3"
    tools:context="com.cmsc355.ccnd.gymrat.CustomWorkout">

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back">

        <Button
            android:id="@+id/Traps"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            android:onClick="onTrapsClick"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:text="Traps" />

        <Button
            android:id="@+id/Shoulders"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:onClick="onShouldersClick"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:text="Shoulders" />

        <Button
            android:id="@+id/Abs"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="1"
            android:onClick="onAbsClick"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="Abs" />

        <Button
            android:id="@+id/Back"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="1"
            android:onClick="onBackClick"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:text="Back" />

        <Button
            android:id="@+id/Chest"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="2"
            android:onClick="onChestClick"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:text="Chest" />

        <Button
            android:id="@+id/Legs"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="3"
            android:onClick="onLegsClick"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:text="Legs" />

        <Button
            android:id="@+id/Biceps"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:onClick="onBicepsClick"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:text="Biceps" />

        <Button
            android:id="@+id/Triceps"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_row="3"
            android:onClick="onTricepsClick"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="Triceps" />

    </GridLayout>

    <Button
        android:id="@+id/back"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="16dp"
        android:background="#000000"
        android:onClick="onGoBackClick"
        android:text="Back"
        android:textColor="#ffffff"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
